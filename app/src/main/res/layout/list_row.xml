<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/rider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="17dp" />
    <TextView
        android:id="@+id/requestedTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rider"
        android:layout_marginTop="7dp"
        android:textColor="#343434"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rider"
        android:layout_alignBottom="@+id/rider"
        android:layout_alignParentRight="true"
        android:textColor="#343434"
        android:textSize="14dp" />
    <TextView
        android:id="@+id/acceptedTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/requestedTimestamp"
        android:layout_alignBottom="@+id/requestedTimestamp"
        android:layout_alignParentRight="true"
        android:textColor="#343434"
        android:textSize="14dp" />

</RelativeLayout>